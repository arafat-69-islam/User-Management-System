{
    "Logging": {
        "LogLevel": {
            "Default": "Warning",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore": "Error",
            "Demo": "Information",
            "System": "Error",
            "Microsoft": "Error"
        },
        "Console": {
            "IncludeScopes": false,
            "LogLevel": {
                "Default": "Warning"
            }
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "server=your-production-server;database=demo_db_prod;user=your-production-username;password=your-production-password;SslMode=Preferred;CharSet=utf8mb4;AllowPublicKeyRetrieval=true;"
    },
    "Kestrel": {
        "Endpoints": {
            "Http": {
                "Url": "http://*:5257"
            },
            "Https": {
                "Url": "https://*:7272"
            }
        },
        "Limits": {
            "MaxConcurrentConnections": 1000,
            "MaxConcurrentUpgradedConnections": 1000,
            "MaxRequestBodySize": 10485760,
            "KeepAliveTimeout": "00:02:00",
            "RequestHeadersTimeout": "00:01:00"
        }
    },
    "Application": {
        "Name": "User Management System",
        "Version": "1.0.0",
        "Environment": "Production",
        "AdminEmail": "admin@gmail.com"
    }
}