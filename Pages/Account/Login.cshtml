@page
@model Demo.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
<form method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label">Email</label>
        <input asp-for="Input.Email" type="email" class="form-control" required />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label">Password</label>
        <input asp-for="Input.Password" type="password" class="form-control" required />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
<div class="mt-3">
    <span>Don't have an account? <a asp-page="/Account/Register">Register here</a></span>
</div>
